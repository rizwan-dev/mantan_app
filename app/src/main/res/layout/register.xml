<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
-

    <RelativeLayout android:background="#fff" android:layout_width="match_parent" android:layout_height="wrap_content">
-

        <LinearLayout android:gravity="center" android:id="@+id/header" android:background="@layout/header_gradient" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20dp" android:textColor="@color/White" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Registration"/>
        </LinearLayout>
-

        <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header">
            <TextView android:textColor="#003366" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Full Name"/>
            <EditText android:textColor="@color/Purple" android:id="@+id/txtnameNew" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true">
                <requestFocus android:layout_width="match_parent"/>
            </EditText>
            <TextView android:textColor="#003366" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Email"/>
            <EditText android:textColor="@color/Purple" android:id="@+id/txtemailNew" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true"/>
            <TextView android:textColor="#003366" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Phone"/>
            <EditText android:textColor="@color/Purple" android:id="@+id/txtmonoNew" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true" android:inputType="phone"/>
            <TextView android:textColor="#003366" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Area/Village"/>
            <EditText android:textColor="@color/Purple" android:id="@+id/txtareaNew" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true"/>
            <TextView android:textColor="#003366" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="City/Taluka"/>
            <EditText android:textColor="@color/Purple" android:id="@+id/txtcityNew" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true"/>
            <TextView android:textColor="#003366" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="District"/>
            <EditText android:textColor="@color/Purple" android:id="@+id/txtstateNew" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true"/>
            <TextView android:textColor="#003366" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Pincode"/>
            <EditText android:textColor="@color/Purple" android:id="@+id/txtpincodeNew" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true" android:inputType="number"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Button android:textColor="#003366" android:id="@+id/btnregister" android:background="@drawable/btnlogingbg" android:layout_width="100dp" android:layout_height="35dp" android:text="Register" android:shadowColor="#fff" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="4" android:onClick="register" style="?android:attr/buttonStyleSmall"/>
                <Button android:textColor="#003366" android:id="@+id/reset" android:background="@drawable/btnclosebg" android:layout_width="100dp" android:layout_height="35dp" android:text="Clear" android:shadowColor="#fff" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="4" android:onClick="register" style="?android:attr/buttonStyleSmall"/>
            </LinearLayout>
            <com.google.android.gms.ads.AdView android:id="@+id/ad_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:adSize="BANNER" app:adUnitId="@string/banner_ad_unit_id"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
