            <ImageView android:id="@+id/imgnews" android:layout_width="50dp" android:layout_height="50dp"/>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:background="@color/White" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tableRow2" android:layout_alignTop="@+id/tableRow2">
